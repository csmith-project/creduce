sub print_pct () {
    my $s = 0;
    foreach my $f (@toreduce) {
	$s += -s $f;
    }
    my $pct = 100 - ($s * 100.0 / $orig_total_file_size);
    printf "(%.1f %%, $s bytes)\n", $pct;
